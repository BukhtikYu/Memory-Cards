<h1>Quiz Questions</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Quiz</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quiz_questions.each do |quiz_question| %>
      <tr>
        <td><%= quiz_question.question %></td>
        <td><%= link_to 'Show', quiz_quiz_questions_path %></td>
        <td><%= link_to 'Edit', quiz_quiz_questions_edit_path(@quiz, quiz_question) %></td>
        <td><%= link_to 'Destroy', [@quiz, quiz_question], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

