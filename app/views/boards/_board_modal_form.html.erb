<div class="modal" id=<%="#{board.id}-modal"%>>
  <div class="modal-content">
    <h2><%= "Edit Board # #{board.id}" %></h2>
    <%= form_with model: board, local: true do |form| %>
    <div class="row">
      <div class="input-field col s6">
        <label class="active" for="textarea1"><%= t'.name' %>:</label>
        <%= form.text_area :name, class: "materialize-textarea" %>
      </div>
    </div>
    <%= form.hidden_field :board_id, value: board.id %>
    <div class="row">
      <%= form.submit "submit", class: "btn orange left" %>
    </div>
    <% end %>
  </div>
</div>

