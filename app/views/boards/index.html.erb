<h2>Boards</h2>
<br>
<%= link_to 'New Board', new_board_path %>
<br>
<br>
<table>
  <th>Name</th>
  <th>User</th>
  <th> </th>
  <% @boards.each do |board| %>
    <tr>
      <td><%= link_to board.name, board_cards_path(board.id) %><br>
        <%= link_to 'Edit', edit_board_path(board) %> | <%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      <td><%= board.user.email %></td>
      <td></td>
    </tr>
  <% end %>
</table>
