<h2>Edit Card # <%= @card.id %></h2>
<br>
<%= form_with(model: [@board, @card], local: true) do |form| %>
  <%= form.label :question %>
  <%= form.text_area :question, class: "input h-64" %>
  <br>
  <br>
  <%= form.label :answer %>
  <%= form.text_area :answer, class: "input h-64" %>
  <br>
  <br>
  <%= form.submit %>
<% end %>
<br>
<%= link_to "Back to card", board_card_path(@board, @card) %>
