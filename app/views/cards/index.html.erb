<h2><%= @board.name %></h2>
<%= link_to 'All boards', boards_path %>
<br>
<br>
<%= link_to 'New card', board_cards_new_path %>
<br>
<br>
<table>
  <th>ID</th>
  <th>Question</th>
  <th>Answer</th>
  <th>Author</th>
  <% @cards.each do |card| %>
    <tr>
      <td><%= link_to card.id, board_card_path(@board, card) %></td>
      <td><%= raw rouge_markdown(card.question) %></td>
      <td><%= raw rouge_markdown(card.answer) %></td>
      <td><%= card.author.email %></td>
      <td><%= link_to 'Edit', board_cards_edit_path(@board, card) %> 
        | <%= link_to 'Destroy', board_cards_edit_path(@board, card), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
