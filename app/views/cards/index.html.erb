<h2><%= @board.name %></h2>
<%= link_to t('.all_boards'), boards_path %>
<br>
<br>
<%= link_to t('.new_card'), board_cards_new_path %>
<br>
<br>
<table>
  <th>ID</th>
  <th><%= t'.question' %></th>
  <th><%= t'.answer' %></th>
  <% @cards.each do |card| %>
    <tr>
      <td><%= link_to card.id, board_card_path(@board, card) %></td>
      <td><%= raw rouge_markdown(card.question) %></td>
      <td><%= raw rouge_markdown(card.answer) %></td>
      <td><%= link_to t('.edit'), board_cards_edit_path(@board, card) %>
        | <%= link_to t('.destroy'), board_cards_edit_path(@board, card), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
