<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title"><%= "#{t('.card')} # #{@card.id}" %></span>
    <h5><%= t'.board' %>: <%= link_to "#{@board.name}", board_cards_path(@board) %></h5>
    <br>
    <h3> <%= raw rouge_markdown(@card.question) %></h3>
  </div>
  <div class="card-reveal">
    <span class="card-title grey-text text-darken-4"><%= "#{t('.card')} # #{@card.id}" %><i class="material-icons right">close</i></span>
    <h3><%= raw rouge_markdown(@card.answer) %></h3>
  </div>
  <div class="input-field col s12">
    <button class="activator btn waves-effect waves-light"><%= t'.show' %></button>
  </div>
</div>

<div class="row">
  <div class="input-field col s2">
    <%= link_to t('.update'), board_cards_edit_path(@board, @card), class: "btn blue waves-effect waves-light left" %>
  </div>
  <div class="input-field col s2">
    <%= link_to t('.destroy'), board_card_path(@board, @card), method: :delete,
                data: { confirm: 'Are you sure?' }, class: "btn blue waves-effect waves-light left" %>
  </div>
</div>
