<div class="card blue-grey darken-1 center-align">
  <div class="card-content white-text">
    <h2><%= raw rouge_markdown(@card.question) %></h2>
  </div>
  <div class="input-field col s12">
    <button class="activator btn waves-effect waves-light"><%= t'.show' %></button>
  </div>
  <div class="row">
  </div>
  <div class="card-reveal black-text center-align">
    <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
    <h4><%= raw rouge_markdown(@card.answer) %></h4>
  </div>
</div>

<div class="row">
  <div class="input-field col s2">
    <%= link_to "Back", board_cards_path(@board), class: "btn blue waves-effect waves-light left" %>
  </div>
  <div class="input-field col s2">
  </div>
  <div class="input-field col s2">
  </div>
  <div class="input-field col s2">
  </div>
  <div class ="input-field col s2">
    <%= link_to t('.update'), board_cards_edit_path(@board, @card), class: "btn blue waves-effect waves-light left" %>
  </div>
  <div class="input-field col s2">
    <%= link_to t('.destroy'), board_card_path(@board, @card), method: :delete,
                data: { confirm: 'Are you sure?' }, class: "btn blue waves-effect waves-light left" %>
  </div>
</div>

