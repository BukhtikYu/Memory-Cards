<div class="card blue-grey darken-1 center-align">
  <div class="card-content white-text">
    <h2><%= raw rouge_markdown(@card.question) %></h2>
  </div>
  <div class="input-field col s12">
    <button class="activator btn waves-effect waves-light"><%= t'.show' %></button>
  </div>
  <div class="row">
  </div>
  <div class="card-reveal black-text center-align">
    <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
    <h4><%= raw rouge_markdown(@card.answer) %></h4>
    <span>How well did I know it?</span>
    <br>
    <div style = 'display:inline-block'><%= button_to "1", board_card_update_confidence_path(@board, @card), method: :patch, params: { confidence_level: 'very_bad' }, class: 'btn red darken-2' %></div>
    <div style = 'display:inline-block'><%= button_to "2", board_card_update_confidence_path(@board, @card), method: :patch, params: { confidence_level: 'bad' }, class: 'btn red accent-2' %></div>
    <div style = 'display:inline-block'><%= button_to "3", board_card_update_confidence_path(@board, @card), method: :patch, params: { confidence_level: 'medium' }, class: 'btn amber' %></div>
    <div style = 'display:inline-block'><%= button_to "4", board_card_update_confidence_path(@board, @card), method: :patch, params: { confidence_level: 'good' }, class: 'btn blue-grey lighten-1' %></div>
    <div style = 'display:inline-block'><%= button_to "5", board_card_update_confidence_path(@board, @card), method: :patch, params: { confidence_level: 'perfect' }, class: 'btn green darken-1' %></div>
    <p>Current level of confidence: <%= @card.confidence_level %></p>
    <br>
  </div>
</div>

<div class="row">
  <div class="input-field col s2">
    <%= link_to "Back", board_cards_path(@board), class: "btn blue waves-effect waves-light left" %>
  </div>
  <div class="input-field col s2">
  </div>
  <div class="input-field col s2">
  </div>
  <div class="input-field col s2">
  </div>
  <div class ="input-field col s2">
    <%= link_to t('.update'), board_cards_edit_path(@board, @card), class: "btn blue waves-effect waves-light left" %>
  </div>
  <div class="input-field col s2">
    <%= link_to t('.destroy'), board_card_path(@board, @card), method: :delete,
                data: { confirm: 'Are you sure?' }, class: "btn blue waves-effect waves-light left" %>
  </div>
</div>
